<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg_share"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar_transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="37.5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="37.5dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/shape_btn_yellow_corner"
            android:text="立即分享"
            android:textColor="@color/text_1"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>