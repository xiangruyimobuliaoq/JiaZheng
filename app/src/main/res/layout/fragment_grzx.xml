<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="14dp"
        android:src="@mipmap/ic_sz" />

    <LinearLayout
        android:id="@+id/grzl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/touxiang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_tx" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:src="@mipmap/ic_hy2" />

                <ImageView
                    android:id="@+id/worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_jz" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_bg_white_corner"
        android:elevation="3dp">

        <LinearLayout
            android:id="@+id/msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/msgnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="我的消息"
                android:textColor="@color/text_1"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@color/line_1" />

        <LinearLayout
            android:id="@+id/desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/descnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="我的评价"
                android:textColor="@color/text_1"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_wddd"
                android:drawableRight="@mipmap/ic_jinr"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:paddingTop="22dp"
                android:paddingRight="32dp"
                android:paddingBottom="22dp"
                android:text="我的订单"
                android:textColor="@color/text_1"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/line_1" />

            <TextView
                android:id="@+id/sqcwgj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_sqcwgj1"
                android:drawableRight="@mipmap/ic_jinr"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:paddingTop="22dp"
                android:paddingRight="32dp"
                android:paddingBottom="22dp"
                android:text="申请成为管家"
                android:textColor="@color/text_1"
                android:textSize="14sp" />

            <View
                android:id="@+id/sqcwgjline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/line_1" />

            <TextView
                android:id="@+id/yjfk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_yjfk"
                android:drawableRight="@mipmap/ic_jinr"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:paddingTop="22dp"
                android:paddingRight="32dp"
                android:paddingBottom="22dp"
                android:text="意见反馈"
                android:textColor="@color/text_1"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/line_1" />

            <TextView
                android:id="@+id/tjfx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_tjfx"
                android:drawableRight="@mipmap/ic_jinr"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:paddingTop="22dp"
                android:paddingRight="32dp"
                android:paddingBottom="22dp"
                android:text="推荐分享"
                android:textColor="@color/text_1"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/line_1" />

            <TextView
                android:id="@+id/lxkf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_lxkf"
                android:drawableRight="@mipmap/ic_jinr"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:paddingTop="22dp"
                android:paddingRight="32dp"
                android:paddingBottom="22dp"
                android:text="联系客服"
                android:textColor="@color/text_1"
                android:textSize="14sp" />

            <View
                android:layout_marginBottom="100dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/line_1" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>