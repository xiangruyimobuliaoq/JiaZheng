<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_bg_white_corner">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18.5dp"
                    android:text="服务类型"
                    android:textColor="@color/text_1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/servetype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_jinr"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:hint="请选择"
                    android:padding="18.5dp"
                    android:textColor="@color/text_1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_bg_white_corner">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18.5dp"
                    android:text="服务单价"
                    android:textColor="@color/text_1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:padding="18.5dp"
                    android:textColor="@color/text_1"
                    android:id="@+id/price"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_bg_white_corner">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18.5dp"
                    android:text="时间选择"
                    android:textColor="@color/text_1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_jinr"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:id="@+id/time"
                    android:padding="18.5dp"
                    android:textColor="@color/text_1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_bg_white_corner">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18.5dp"
                    android:text="选择地址"
                    android:textColor="@color/text_1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/ic_jinr"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:hint="请选择"
                    android:id="@+id/addr"
                    android:padding="18.5dp"
                    android:textColor="@color/text_1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_bg_white_corner"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18.5dp"
                    android:text="是否购买保险服务"
                    android:textColor="@color/text_1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="15dp"
                    android:text="2元"
                    android:textColor="@color/red"
                    android:textSize="14sp" />

                <CheckBox
                    style="@style/CheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:id="@+id/cb"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18.5dp"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_white_corner"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="请描述需要服务的具体内容~"
                    android:lines="10"
                    android:padding="18.5dp"
                    android:id="@+id/content"
                    android:textColor="@color/text_1"
                    android:textSize="12sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/piclist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="温馨提示：最多只能上传4张图片"
                    android:textColor="@color/text_yellow"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        android:background="@drawable/shape_btn_yellow_corner"
        android:text="寻找管家"
        android:textColor="@color/text_1"
        android:textSize="16sp" />
</RelativeLayout>