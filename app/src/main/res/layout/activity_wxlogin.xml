<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_login_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="绑定手机"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="55.5dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_bg_white_corner"
            android:elevation="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18.5dp"
                android:src="@mipmap/ic_logo" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44.5dp"
                android:layout_marginTop="55dp"
                android:layout_marginRight="44.5dp"
                android:background="@null"
                android:hint="请输入手机号码"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:nextFocusDown="@id/smscode"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="44.5dp"
                android:layout_marginRight="44.5dp"
                android:background="@color/line_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44.5dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="44.5dp">

                <EditText
                    android:id="@+id/smscode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:nextFocusDown="@id/password"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sendcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/statusbar_blue"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="44.5dp"
                android:layout_marginRight="44.5dp"
                android:background="@color/line_1" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44.5dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="44.5dp"
                android:background="@null"
                android:hint="请输入密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:nextFocusDown="@id/password"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="44.5dp"
                android:layout_marginRight="44.5dp"
                android:background="@color/line_1" />


            <Button
                android:id="@+id/regist"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_btn_yellow_corner"
                android:text="确定"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>